<p id="notice"><%= notice %></p>

<h1>Listing Comments</h1>

<%= will_paginate @comments %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>醫院</th>
      <th>科別</th>
      <th>醫師</th>
      <th>科別評分</th>
      <th>科別評論</th>
      <th>醫師評分</th>
      <th>醫師評論</th>
      <th>評論時間</th>
      <th>評論人</th>
      <th>推薦</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td style="width:10px"><%= comment.id %></td>
        <td style="width:80px"><%= comment.hospital.name %></td>
        <td style="width:80px"><%= comment.division.name %></td>
        <% if comment.doctor %>
          <td style="width:80px"><%= comment.doctor.name %></td>
        <% else %>
          <td style="width:80px; color:red;">未評論醫生</td>
        <% end %>
        <td style="width:100px"><%= "環境衛生:#{comment.div_environment}"%><br>
                                <%= "醫療設備:#{comment.div_equipment}"%><br>
                                <%= "醫護專業:#{comment.div_speciality}"%><br>
                                <%= "服務態厲:#{comment.div_friendly}"%><br>
        </td>
        <td style="color:blue;"><%= comment.div_comment %></td>
        <td style="width:100px">
          <%= "醫師態度:#{comment.dr_friendly}"%><br>
          <%= "醫師專業:#{comment.dr_speciality}"%><br>
        <td style="color:blue;"><%= comment.dr_comment %></td>
        <td style="color:green;"><%= comment.updated_at.strftime("%Y/%m/%d") %></td>
        <td style="width:80px;color:orange;"><%= comment.commentor.name %></td>
        <td style="width:10px;color:red;"><%= comment.is_recommend %></td>
        <td><%= link_to 'Edit', edit_admin_comment_path(comment,page: params[:page]) %></td>
        <td><%= link_to 'Destroy', admin_comment_path(comment,page: params[:page]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @comments %>
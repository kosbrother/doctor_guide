<p id="notice"><%= notice %></p>

<h1>Listing Hospitals</h1>

<%= will_paginate @hospitals %>
<table>
  <thead>
    <tr>
      <th>醫院</th>
      <th>phone</th>
      <th>address</th>
      <th>grade</th>
      <th>assess</th>
      <th>營業中</th>
      <th>服務</th>
      <th>營業時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hospitals.each do |hospital| %>
      <tr>
        <td><%= hospital.name.truncate(15) %></td>
        <td><%= hospital.phone %></td>
        <td><%= hospital.address.truncate(15) %></td>
        <td><%= hospital.grade %></td>
        <td><%= hospital.assess.truncate(15) if hospital.assess%></td>
        <td><%= hospital.on ? "是" : "否" %></td>
        <td><%= hospital.ss.to_s.truncate(15) if hospital.ss%></td>
        <td><%= hospital.cHours.to_s.truncate(15) if hospital.cHours%></td>
        <td><%= link_to 'Show', admin_hospital_path(hospital) %></td>
        <td><%= link_to 'Edit', edit_admin_hospital_path(hospital) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hospital', new_admin_hospital_path %>
<%= will_paginate @hospitals %>
<p id="notice"><%= notice %></p>

<h1>醫院及其科別</h1>

<dl>
  <dt>醫院</dt>
  <dd><%= @hospital.name %></dd>
  <dt>phone</dt>
  <dd><%= @hospital.phone %></dd>
  <dt>address</dt>
  <dd><%= @hospital.address %></dd>
  <dt>grade</dt>
  <dd><%= @hospital.grade %></dd>
  <dt>assess</dt>
  <dd><%= @hospital.assess %></dd>
  <dt>營業中</dt>
  <dd><%= @hospital.on ? "是" : "否" %></dd>
  <dt>服務</dt>
  <dd><%= @hospital.ss %></dd>
  <dt>營業時間</dt>
  <dd><%= @hospital.cHours%></dd>
</dl>

<table>
  <thead>
    <tr>
      <th>醫院科別名稱</th>
      <th>科別分類</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @divisions.each do |div| %>
      <tr>
        <td><%= div.name %></td>
        <td><%= div.category.name if div.category %></td>
        <td><%= link_to '科別及科別醫師', division_path(div,hospital_id: @hospital.id) %></td>
        <td><%= link_to '修改科別', edit_division_path(div,hospital_id: @hospital.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '新增醫院科別', new_division_path(hospital_id: @hospital.id) %> |
<%= link_to '編輯醫院', edit_hospital_path(@hospital) %> |
<%= link_to '回醫院列表', hospitals_path %>

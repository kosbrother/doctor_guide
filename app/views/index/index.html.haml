.recommend-lists
  .recommend-lists-title
    .recommend-lists-tag.active
      = link_to '推薦醫院', '#recommendHospitals', 'data-toggle' => "tab"
    .recommend-lists-tag{ 'data-toggle' => "tab"}
      = link_to '熱門醫院', '#popHospitals', 'data-toggle' => "tab"
    .recommend-lists-more
      = link_to '觀看更多', ''
  .recommend-lists-content.row
    #recommendHospitals.tab-pane.active
      - @goodHospitals.each_slice(2).with_index do |hospitals, i|
        .col-md-6.box
          .recommend-lists-ranknum
            = (i*2)+1
          .recommend-lists-list
            = link_to hospitals[0].name, ""
            %li.glyphicon.glyphicon-thumbs-up
              = hospitals[0].recommend_num
        .col-md-6.box
          .recommend-lists-ranknum
            = (i*2)+2
          .recommend-lists-list
            = link_to hospitals[1].name, ""
            %li.glyphicon.glyphicon-thumbs-up
              = hospitals[1].recommend_num
    #popHospitals.tab-pane
      - @popHospitals.each_slice(2).with_index do |hospitals, i|
